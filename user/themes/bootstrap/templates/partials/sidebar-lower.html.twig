{% if config.plugins.feed.enabled %}
	<div class="sidebar-content syndicate">
		<h4>Syndicate</h4>
		<ul>
			<li><a href="{{ feed_url }}.atom"><i class="fa fa-rss-square"></i> Atom 1.0</a></li>
			<li><a href="{{ feed_url }}.rss"><i class="fa fa-rss-square"></i> RSS</a></li>
		</ul>
	</div>
{% endif %}