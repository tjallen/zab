<!DOCTYPE html>
<html lang="en">
<head>
{% set theme_config = attribute(config.themes, config.system.pages.theme) %}

{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.ico') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic') %}
        {% do assets.add('theme://css/bootstrap.min.css',101) %}
        {% do assets.add('theme://css/styles.css',100) %}
        {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css') %}

        {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
            {% do assets.addJs('theme://js/html5shiv-printshiv.min.js') %}
        {% endif %}
    {% endblock %}
    {{ assets.css() }}

{% endblock head%}



</head>
<body id="top" class="{{ page.header.body_classes }}">

    <div id="sb-site">
        
        {% include 'partials/hero.html.twig' %}
        
        {% block body %}
        <section id="body" class="{{ page.header.body_classes }}">
            {% block content %}{% endblock %}
        </section>
        {% endblock %}

        {% block footer %}
        <footer id="footer">
            <p>All images and text (c) Zabby Allen. If you wish to use an image please credit and link back. <a href="mailto:zabbyallen@gmail.com" class="email">Email me</a> if you wish to feature a whole post. Thanks!</p>
        </footer>
        {% endblock %}
    </div>
    {% block bottom %}

    {% endblock %}
    <!-- typekit -->
    <script src="https://use.typekit.net/fuy8fju.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <!-- jq -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    {% block javascripts %}
        {% do assets.addJs('theme://js/bootstrap.min.js',101) %}
        {% do assets.addJs('theme://js/modernizr.custom.71422.js',100) %}
    {% endblock %}
    {{ assets.js() }}

</body>
</html>
