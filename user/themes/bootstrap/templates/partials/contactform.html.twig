<form class="form-group" action="//formspree.io/thomwork@gmail.com"
      method="POST">
      <fieldset class="form-group">
    			<label for="username">Your name</label>		
    	    <input type="text" name="name" id="username" maxlength="30" required>
      </fieldset>
		<fieldset class="form-group">
				<label for="useremail">Your email address</label>
		    <input type="email" id="useremail" name="_replyto" maxlength="60" pattern="\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,6})+" required="">
		</fieldset>
		<fieldset class="form-group">	
				<label for="message">Your message</label>
				<textarea name="message" id="message" cols="30" rows="6" maxlength="1000" required></textarea>
		</fieldset>
		
    <input type="hidden" name="_subject" value="New submission!" />
    <input type="text" name="_gotcha" style="display:none" />

    <button type="submit" class="btn btn-default">Send</button>

    <input type="hidden" name="_next" value="http://www.zabbyallen.com/thanks" />
</form>